		<script type="text/javascript" src="../../js/remote/ui.js"></script>
		<script type="text/javascript" src="../../js/remote/base.js"></script>
		<script type="text/javascript" src="../../js/remote/square.js"></script>
		<script type="text/javascript" src="../../js/local/page.js"></script>
		<script type="text/javascript">
			mui.init({
				swipeBack: true, //启用右滑关闭功能
				pullRefresh: {
					container: '#wrap',
					down: {
						style: "circle",
						color: "#2492FC",				//可选，默认“#2BD009” 下拉刷新控件颜色
						height: '30px',					//可选,默认50px.下拉刷新控件的高度,
						range: '70px',					//可选 默认100px,控件可下拉拖拽的范围
						offset: '0px',					//可选 默认0px,下拉刷新控件的起始位置
						auto: true,					//可选,默认false.首次加载自动上拉刷新一次
						callback: pullDownRefreshFun
					},
					up: {
						height: 50, 					//可选.默认50.触发上拉加载拖动距离
						auto: false, 					//可选,默认false.自动上拉加载一次
						contentrefresh: "正在加载...",	//可选，正在加载状态时，上拉加载控件上显示的标题内容
						contentnomore: '没有更多数据了',	//可选，请求完毕若没有更多数据时显示的提醒内容
						callback: pullUpRefreshFun
					}
				}
			});
			
			var userInfo = null;
			var decontaminatingParam = {};
			var dataLength = 0;
			mui.plusReady(function() {
				decontaminatingParam = {
					pageNum : 1,
					pageSize : 10,
					append : false
				}
				
				// 监听其他页面调用reloadWebView方法
				window.addEventListener("reloadWebView", function(event) {
					pullDownRefreshFun();
				});
				
				// 监听其他页面调用searchFunc方法
				window.addEventListener("searchFunc", function(event) {
					var bodyHeight = $("body").height();
					var height_mui_popover = bodyHeight * 0.55;
					$(".mui-popover").height(height_mui_popover);
					$(".mui-popover-content").height(height_mui_popover - 100);
					mui("#popover").popover('show', document.getElementById("search_area"));
				});
				
			//	resizeListener("disinfection");
			});
			
			/**
			 * 下拉刷新功能
			 */
			function pullDownRefreshFun() {
				mui("#popover").popover('hide', document.getElementById("search_area"));
				decontaminatingParam.pageNum = 1;
				decontaminatingParam.append = false;
				
				decontaminatingParam.decontamination = "";
				decontaminatingParam.linkman = "";
				decontaminatingParam.linktel = "";
				decontaminatingParam.technician  = "";
				
				setTimeout(nextRefresh, 500);
			}
			
			/**
			 * 下拉刷新结束
			 */
			function nextRefresh() {
				decontaminatingList(decontaminatingParam);
				mui('#wrap').pullRefresh().endPulldownToRefresh();
				if(dataLength > 0) {
					mui.toast("加载完成");
				}
			}
			
			/**
			 * 上拉加载功能
			 */
			function pullUpRefreshFun() {
				mui("#popover").popover('hide', document.getElementById("search_area"));
				if(dataLength != 0) {
					decontaminatingParam.pageNum++;
				}
				decontaminatingParam.append = true;
				decontaminatingList(decontaminatingParam);
				mui('#wrap').pullRefresh().endPullupToRefresh(false);
				mui('#wrap').pullRefresh().disablePullupToRefresh(); // 隐藏“上拉加载”所在区域
			}
			
			function decontaminatingList(loadParam) {
				$page.render({
					container: "wrap",
					template: "resDecontaminating",
					loadFun: $square.getDecontaminatingList, // 数据加载的函数
					loadParam: loadParam,
					context: function(ret) {
						dataLength = ret.rows.length;
					//	console.log(dataLength);
						return ret.rows;
					}
				});
			}
			
			function editDecontaminating(decontaminating_id) {
				openNewWebView("editDecontaminatingList.html", "editDecontaminatingList.html", {}, {
					decontaminating_id : decontaminating_id
				});
			}
			
			function toDetailInfo(decontaminating_id) {
				openNewWebView("detailDecontaminatingList.html", "detailDecontaminatingList.html", {}, {
					decontaminating_id : decontaminating_id
				});
			}
			
			function removeDecontaminating(decontaminating_id) {
				mui.post(BASEURL + "decontaminating/remove", {ids : decontaminating_id}, function(ret) {
					if(ret.code == 0) {
						mui.toast("删除成功");
						pullDownRefreshFun();
					} else {
						mui.toast(ret.msg);
					}
				});
			}
			
			function searchFunc() {
				decontaminatingParam.pageNum = 1;
				decontaminatingParam.append = false;
				
				decontaminatingParam.decontamination = mui("#searchDecontaminating_decontamination")[0].value;
				decontaminatingParam.linkman = mui("#searchDecontaminating_linkman")[0].value;
				decontaminatingParam.linktel = mui("#searchDecontaminating_linktel")[0].value;
				decontaminatingParam.technician = mui("#searchDecontaminating_technician")[0].value;
				
				setTimeout(nextRefresh, 500);
				
				mui("#searchDecontaminating_decontamination")[0].value = "";
				mui("#searchDecontaminating_linkman")[0].value = "";
				mui("#searchDecontaminating_linktel")[0].value = "";
				mui("#searchDecontaminating_technician")[0].value = "";
				
				mui("#popover").popover('hide', document.getElementById("search_area"));
			}
		</script>
	</body>

