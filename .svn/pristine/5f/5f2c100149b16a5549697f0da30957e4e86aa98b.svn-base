		<div id="search_area"></div>
		<div id="popover" class="mui-popover f-column">
			<div class="mui-popover-title">搜索 - 洗消站</div>
			<div class="mui-popover-content" id="monitorForm">
				<form class="mui-input-group">
					<div class="mui-input-row">
						<label class="label-2">洗消站名称：</label>
						<input type="text" placeholder="请输入" id="searchDecontaminating_decontamination">
					</div>
					<div class="mui-input-row">
						<label>联系人：</label>
						<input type="text" placeholder="请输入" id="searchDecontaminating_linkman">
					</div>
					<div class="mui-input-row">
						<label>联系电话：</label>
						<input type="text" placeholder="请输入" id="searchDecontaminating_linktel">
					</div>
					<div class="mui-input-row">
						<label>技术员：</label>
						<input type="text" placeholder="请输入" id="searchDecontaminating_technician">
					</div>
				</form>
			</div>
			<div class="mui-popover-footer">
				<button type="button" class="mui-btn mui-btn-primary mui-icon mui-icon-search" onclick="searchFunc();">搜索</button>
			</div>
		</div>
		<script type="text/javascript" src="../../../../js/mui.min.js"></script>
		<script type="text/javascript" src="../../../../js/jquery-1.12.4.min.js"></script>
