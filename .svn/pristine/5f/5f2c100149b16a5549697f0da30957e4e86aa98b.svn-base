		<script id="resDecontaminating" type="text/x-dot-template">
			{{~it :item:idx}}
				<div class="mui-card" onclick="toDetailInfo('{{!item.id}}')">
					<div class="mui-card-header">
						<div class="mui-theme-color mui-col-sm-12 mui-ellipsis">{{=item.decontamination}}</div>
						<!-- <div class="mui-col-sm-1-2" onclick="editDecontaminating('{{!item.id}}')"><span class="mui-icon mui-icon-compose"></span></div>
						<div class="mui-col-sm-1-2" onclick="removeDecontaminating('{{!item.id}}')"><span class="mui-icon mui-icon-trash"></span></div> -->
					</div>
					<div class="mui-card-content f-column">
						<div class="f-row m-l-4">
							<div class="mui-col-sm-6">
								<div><span class="span-title-area">联系人：</span>{{=item.linkman}}</div>
								<div><span class="span-title-area">质量监督员：</span>{{=item.regulators}}</div>
								<div><span class="span-title-area">技术员：</span>{{=item.technician}}</div>
							</div>
