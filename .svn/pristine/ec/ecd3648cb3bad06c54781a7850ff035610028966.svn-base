.f-row { display: flex; flex-flow: row; display: -ms-flexbox; }

.f-column { display: flex; flex-flow: column; display: -ms-flexbox; }

.w-num-input { width: 77.5% !important; padding: 10px 5px 13px 15px; }

.w-num-func { width: 22.5% !important; }

.numbk_layer {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	z-index: 9999;
	display: none;
}

.numbk_mask {
	position: absolute;
	width: 100%;
	height: 100%;
	z-index: 499;
}

.numbk_actionsheet {
	position: absolute;
	bottom: 0;
	left: 0;
	width: 100%;
	background-color: #FFFFFF !important;
	border-top: 0.6px solid #E0D0F0;
	user-select: none;
	-ms-user-select: none;
	z-index: 500;
}

.numbk_items {
	margin: auto;
	border-radius: 5px;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	list-style: none;
	overflow: hidden;
}

.w-num-input li {
	width: 29.5% !important;
	height: 52px;
	line-height: 52px;
}

.w-num-func li {
	width: 90% !important;
	height: 68px;
	line-height: 68px;
}

.numbk_items li {
	text-align: center;
	background: #f5f5f5;
	border-radius: 5px;
	font-weight: bold;
	float: left;
	box-shadow: 0px 2px 1px #7d7d7d;
	color: #1b50a2;
	font-size: 20px;
	cursor: pointer;
}

.w-num-input .numbk_num {
	margin: 1.96% 3.6% 0 0 !important;
}

.w-num-func .numbk_func {
	margin: 10px 0 0 !important;
}

.numbk_items .numbk_func {
	width: 22.5%;
	margin: 1.66% 0;
	color: #fff;
}

.numbk_items .numbk_exit {
	background: #F44336;
}

.numbk_items .numbk_del {
	background: #ff9800;
}

.numbk_items .numbk_clear {
	background: #2196F3;
}

.numbk_items .numbk_sure {
	background: #4CAF50;
}

.numbk_items .numbk_screen {
	width: 100%;
	margin-bottom: 1.66%;
	padding: 0 10px;
	text-align: right;
	overflow: hidden;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}

.numbk_items li:not(.numbk_screen):active {
	box-shadow: 0px -2px 1px #7d7d7d;
}
