/* 共用样式 */
html, body {
	height: 100%;
}

html, body, div, ul, ol, dl, dt, dd, li, dl, h1, h2, h3, h4 { margin: 0; padding: 0; font-style: normal; font-size: 14px; color: #333333; }

ol, ul, li { list-style: none; }

a { color: #333; text-decoration: none; -webkit-touch-callout: none; -webkit-user-select: none; }

a, input, select { -webkit-tap-highlight-color: transparent; -webkit-appearance: none; -moz-appearance: none; -webkit-border-radius: 0; }

:focus { outline: none }

table { border-collapse: collapse; border-spacing: 0 }

.clearfix { clear: both; }

p { font-size: 0.24rem; color: #333333; }

.max-width { max-width: 100%; max-height: 100%; }

/* 兼容苹果X XS底部 */
body { padding-top: constant(safe-area-inset-top); }

* { touch-action: pan-y; } /* 事件处理程序调用 preventDefault 来阻止默认滑动行为 */

.mui-bar.mui-bar-nav { top: constant(safe-area-inset-top); }

